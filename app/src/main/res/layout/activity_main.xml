<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_principal"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/mimenu"
        android:layout_gravity="start"/>


    <RelativeLayout
    android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="391dp"
        android:layout_height="122dp"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/iconosalud" />

    <Button
        android:id="@+id/btncitas"
        android:layout_width="309dp"
        android:layout_height="75dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/Boton1"
        android:text="Ver Citas"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:cornerRadius="15dp"
        app:icon="@android:drawable/ic_search_category_default"
        app:iconTint="#020202"
        android:layout_centerInParent="true"
        android:layout_below="@+id/imageView"/>

    <Button
        android:id="@+id/btnformulario"
        android:layout_width="314dp"
        android:layout_height="70dp"
        android:layout_below="@id/btncitas"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Boton2"
        android:text="Registrar Citas"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:cornerRadius="15dp"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconTint="#020202" />

    <Button
        android:id="@+id/btnsedes"
        android:layout_width="314dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/Boton3"
        android:text="Ver Sedes"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:cornerRadius="15dp"
        app:icon="@android:drawable/ic_menu_mylocation"
        app:iconTint="#020202"
        android:layout_centerInParent="true"
        android:layout_below="@id/btnformulario"/>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>